<!--views/inventory/add-classification-->
<div class="container inventory-page">
  <div class="page-intro">
    <h1 class="page-title"><%= title %></h1>
  </div>

  <!--Flash removed and moved to layout-->

  <% if (errors && errors.length) { %>
    <ul class="form-errors">
      <% errors.forEach(function(err){ %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-classification" method="post" class="account-form" novalidate>
    <div class="form-row">
      <label for="classification_name">Classification Name <span class="required">*</span></label>
      <!-- client-side: no spaces/special chars -->
      <input id="classification_name" name="classification_name" type="text" required pattern="^[A-Za-z0-9]+$" />
      <small class="muted-note">Name must contain only letters and numbers (no spaces or special characters).</small>
    </div>

    <div class="form-row">
      <button type="submit" class="btn-primary">Add Classification</button>
    </div>
  </form>
</div>
