<!-- views/account/login.ejs -->
<h1><%= title %></h1>

<!-- flash / express-messages (renders any flash messages) -->
<div class="flash-messages">
  <%- messages() %>
</div>

<form action="/account/login" method="post" class="account-form">
  <div class="form-row">
    <label for="account_email">Email</label>
    <input id="account_email" name="account_email" type="email" />
  </div>

  <div class="form-row">
    <label for="account_password">Password</label>
    <input id="account_password" name="account_password" type="password" />
  </div>

  <div class="form-row">
    <button type="submit">Log In</button>
  </div>
</form>

<p class="register-link">
  Don't have an account? <a href="/account/register">Register here</a>
</p>
