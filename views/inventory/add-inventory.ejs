<div class="container inventory-page">
  <div class="page-intro">
    <h1 class="page-title"><%= title %></h1>
  </div>

  <div class="flash-messages">
    <%- messages() %>
  </div>

  <% if (errors && errors.length) { %>
    <ul class="form-errors">
      <% errors.forEach(function(err){ %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-inventory" method="post" class="account-form">
    <div class="form-row">
      <label for="classificationList">Classification <span class="required">*</span></label>
      <!-- classificationList is prebuilt HTML (select) from utilities -->
      <%- classificationList %>
    </div>

    <div class="form-row">
      <label for="inv_make">Make <span class="required">*</span></label>
      <input id="inv_make" name="inv_make" type="text" required value="<%= inv.inv_make || '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_model">Model <span class="required">*</span></label>
      <input id="inv_model" name="inv_model" type="text" required value="<%= inv.inv_model || '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_year">Year</label>
      <input id="inv_year" name="inv_year" type="number" min="1900" max="2099" step="1" value="<%= inv.inv_year || '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_price">Price <span class="required">*</span></label>
      <input id="inv_price" name="inv_price" type="number" step="0.01" required value="<%= inv.inv_price || '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_miles">Mileage</label>
      <input id="inv_miles" name="inv_miles" type="number" value="<%= inv.inv_miles || '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_color">Color</label>
      <input id="inv_color" name="inv_color" type="text" value="<%= inv.inv_color || '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description"><%= inv.inv_description || '' %></textarea>
    </div>

    <div class="form-row">
      <label for="inv_image">Image Path</label>
      <input id="inv_image" name="inv_image" type="text" value="<%= inv.inv_image || '/images/site/no-image.jpg' %>" />
    </div>

    <div class="form-row">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input id="inv_thumbnail" name="inv_thumbnail" type="text" value="<%= inv.inv_thumbnail || '/images/site/no-image-tn.jpg' %>" />
    </div>

    <div class="form-row">
      <button type="submit" class="btn-primary">Add Inventory Item</button>
    </div>
  </form>
</div>
