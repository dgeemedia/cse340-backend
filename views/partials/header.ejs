<!-- views/partials/header.ejs -->
<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE340 Motors</a>
  </span>

  <div id="tools">
    <% if (typeof accountData !== 'undefined' && accountData) { %>
      <!-- Visible only when logged in: welcome link and My Account -->
      <a href="/account/" title="Account management">Welcome <%= accountData.account_firstname %></a>
      <a href="/account/" title="My Account">My Account</a>

      <!-- Logout as a POST form to avoid CSRF via GET -->
      <form action="/account/logout" method="post" style="display:inline; margin-left:8px;">
        <button type="submit">Logout</button>
      </form>
    <% } else { %>
      <!-- Visible only when not logged in -->
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
