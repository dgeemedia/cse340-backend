<!--views/inventory/edit-inventory.ejs-->
<div class="container inventory-page">
  <div class="page-intro">
    <h1 class="page-title"><%= title %></h1>
  </div>

  <div class="flash-messages">
    <%- messages() %>
  </div>

  <% if (errors && errors.length) { %>
    <ul class="form-errors">
      <% errors.forEach(function(err){ %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/update" method="post" class="account-form">
    <!-- hidden id -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>" />

    <div class="form-row">
      <label for="classificationList">Classification <span class="required">*</span></label>
      <%- classificationSelect %>
    </div>

    <div class="form-row">
      <label for="inv_make">Make <span class="required">*</span></label>
      <input id="inv_make" name="inv_make" type="text" required value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_model">Model <span class="required">*</span></label>
      <input id="inv_model" name="inv_model" type="text" required value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_year">Year</label>
      <input id="inv_year" name="inv_year" type="number" min="1900" max="2099" step="1" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_price">Price <span class="required">*</span></label>
      <input id="inv_price" name="inv_price" type="number" step="0.01" required value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_miles">Mileage</label>
      <input id="inv_miles" name="inv_miles" type="number" value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_color">Color</label>
      <input id="inv_color" name="inv_color" type="text" value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" />
    </div>

    <div class="form-row">
      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description"><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
    </div>

    <div class="form-row">
      <label for="inv_image">Image Path</label>
      <input id="inv_image" name="inv_image" type="text" value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>" />
    </div>

    <div class="form-row">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input id="inv_thumbnail" name="inv_thumbnail" type="text" value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" />
    </div>

    <div class="form-row">
      <button type="submit" class="btn-primary">Update Vehicle</button>
    </div>
  </form>
</div>
