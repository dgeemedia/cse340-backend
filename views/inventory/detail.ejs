<!-- views/inventory/detail.ejs -->
<div class="container inventory-detail-page">
  <div class="page-intro">
    <% if (title) { %>
      <h1 id="page-title" class="page-title"><%= title %></h1>
    <% } %>
  </div>

  <section aria-labelledby="page-title" class="inventory-detail-section">
    <h2 class="sr-only">Vehicle details</h2>

    <% if (typeof detail !== "undefined" && detail) { %>
      <section class="inventory-detail-wrap">
        <%- detail %>
      </section>
    <% } else { %>
      <p class="notice">Sorry, no vehicle details available.</p>
    <% } %>
  </section>
</div>
